<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Define the shape type -->
        <solid android:color="#FFFFFF" /> <!-- Background color of the shape -->

        <!-- Define the corners to make the rectangle rounded -->
        <corners android:radius="16dp" /> <!-- Adjust the radius for roundness -->

        <!-- Define the stroke (optional) -->
        <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Border color and width -->

        <!-- Define the padding (optional) -->
        <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
    </shape>

</selector>